@using GekkoTrading.Models.Entities
@model MovingAverageVM


<div class="list-group hidden-xs">
    <span href="#" class="list-group-item" style="font-weight:700">
        Instruments
    </span>
    @foreach (var item in Model.Instruments)
    {
        if (item.Id == Model.ActiveInstrument)
        {
            <a href="/Tool/MA/@item.Id" class="list-group-item active">@item.InstrumentName</a>
        }
        else
        {
            <a href="/Tool/MA/@item.Id" class="list-group-item">@item.InstrumentName</a>
        }
    }
</div>

<div class="dropdown visible-xs" style="max-width:280px">
    <button class="btn btn-default dropdown-toggle FullWidthBtn" type="button" data-toggle="dropdown">
        Instruments
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
        @foreach (var item in Model.Instruments)
        {
            if (item.Id == Model.ActiveInstrument)
            {
                <li><a href="/Tool/MA/@item.Id" class="list-group-item active">@item.InstrumentName</a></li>
            }
            else
            {
                <li><a href="/Tool/MA/@item.Id" class="list-group-item">@item.InstrumentName</a></li>
            }
        }
    </ul>
</div>

